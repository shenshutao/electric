<div id="wrapper">
    <%= render "shared/NavMenu" %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12 col-md-6">
                    <h1 class="page-header"><%= t('What\'s the meanings of red, yellow and green colors ?') %> </h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    
                    <!--panel-->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                           <%= t('Power Status') %>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">

                            <div class="well">
                            <h4><%= t('Our system help you judge the power usage') %></h4>
                            <p><%= t('We have compared your') %></p>
                            </div>

                            <!--The Red block-->
                            <div class="panel panel-red">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-bolt fa-5x"></i>
                                        </div>
                                        <div class="col-xs-9 text-right">
                                            
                                            <div class="huge">(<%= t('Example') %>) 3000 W</div>
                                            <div> <%= t('Current Usage') %>: <%= t('too high') %> </div>
                                        </div>
                                    </div>
                                </div>
                                <a href="/">
                                    <div class="panel-footer">
                                        <span class="pull-left"><%= t('View Details') %></span>
                                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                            <!-- /.red block-->

                            <p><%= t('This suggests that your current power usage is relatively high') %></p>
                            <div style="height: 30px;"></div>

                            <!--The yellow block-->
                            <div class="panel panel-yellow">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-bolt fa-5x"></i>
                                        </div>
                                        <div class="col-xs-9 text-right">
                                            
                                            <div class="huge">(<%= t('Example') %>) 1000 W</div>
                                            <div> <%= t('Current Usage') %>: <%= t('fair') %> </div>
                                        </div>
                                    </div>
                                </div>
                                <a href="/">
                                    <div class="panel-footer">
                                        <span class="pull-left"><%= t('View Details') %></span>
                                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                            <!-- /.yellow block-->

                            <p><%= t('Your current power usage is neither high nor low.') %> </p>
                            <div style="height: 30px;"></div>

                            <!--The green block-->
                            <div class="panel panel-green">
                                <div class="panel-heading">
                                    <div class="row">
                                        <div class="col-xs-3">
                                            <i class="fa fa-bolt fa-5x"></i>
                                        </div>
                                        <div class="col-xs-9 text-right">
                                            
                                            <div class="huge">(<%= t('Example') %>) 100 W</div>
                                            <div> <%= t('Current Usage') %>: <%= t('low') %> </div>
                                        </div>
                                    </div>
                                </div>
                                <a href="/">
                                    <div class="panel-footer">
                                        <span class="pull-left"><%= t('View Details') %></span>
                                        <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                        <div class="clearfix"></div>
                                    </div>
                                </a>
                            </div>
                            <!-- /.green block-->
                            <p><%= t('This suggests that your current power usage is relatively low') %></p>
                            <div style="height: 30px;"></div>



                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                   
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /page-wrapper -->

</div>
<!-- /wrapper -->