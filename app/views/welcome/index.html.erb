<div id="wrapper">
    <%= render "shared/NavMenu" %>
        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12 col-md-6">
                    <h1 class="page-header">Real Time Usage</h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>

            <!-- /.row -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-yellow">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-3">
                                    <i class="fa fa-bolt fa-5x"></i>
                                </div>
                                <div class="col-xs-9 text-right">
                                    <i id="usage-text-spinner" aria-hidden="true" class="fa fa-spinner fa-spin" style="font-size:28px;"></i>
                                    <div id="welcome_index_current_value" class="huge"></div>
                                    <div id="usage-status"></div>
                                </div>
                            </div>
                        </div>
                        <a href="/welcome/statusinfo">
                            <div class="panel-footer">
                                <span class="pull-left">View Details</span>
                                <span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span>
                                <div class="clearfix"></div>
                            </div>
                        </a>
                    </div>
                    <!--panel-->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                                <button id="button-previous" type="button" class="btn btn-default btn-circle"><i class="fa fa-angle-left"></i>
                                </button>
                                <span id="power-graph-title"><strong>Power</strong></span>
                                <button id="button-next" type="button" class="btn btn-default btn-circle"><i class="fa fa-angle-right"></i>
                                </button>
                                <div class="pull-right">
   
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                        More
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu pull-right" role="menu">
                                        <li><a href="/welcome/powerdetail">Select a Day</a>
                                        </li>
                                    </ul>
                                </div>
                                </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <i id="current-usage-spinner" aria-hidden="true" class="fa fa-spinner fa-spin" style="font-size:60px;"></i>
                            <div id="morris-area-chart" style="display:none;"></div>
                        </div>
                        <!-- /.panel-body -->
                    </div>
                    <!-- /.panel -->
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <i class="fa fa-bar-chart-o fa-fw"></i> Your Cost in Past 7 Days
                            <div class="pull-right">
                                <div class="btn-group">
                                    <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
                                        More
                                        <span class="caret"></span>
                                    </button>
                                    <ul class="dropdown-menu pull-right" role="menu">
                                        <li><a href="/week_history/index">Weekly Usage</a>
                                        </li>
                                        <li><a href="/month_history/index">Monthly Usage</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        <!-- /.panel-heading -->
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-hover table-striped">
                                            <thead>
                                                <tr>
                                                    <th>Date</th>
                                                    <th>kWh</th>
                                                </tr>
                                            </thead>
                                            <tbody>

                                                <% @usage.each do |usage| %>
                                                    <tr>
                                                        <td>
                                                            <%= usage.date %>
                                                        </td>
                                                        <td>
                                                            <%= usage.kwh %>
                                                        </td>
                                                    </tr>
                                                    <% end %>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- /.table-responsive -->
                                </div>
                                <!-- /.col-lg-4 (nested) -->
                                <div class="col-lg-8">
                                    <i id="last-7-spinner" aria-hidden="true" class="fa fa-spinner fa-spin" style="font-size:60px;"></i>
                                    <div id="last7days-chart"></div>
                                </div>
                                <!-- /.col-lg-8 (nested) -->
                            </div>
                            <!-- /.row -->
                        </div>
                        <!-- /.panel-body -->
                    </div>
                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /page-wrapper -->

</div>
<!-- /wrapper -->